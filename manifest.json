{
  "manifest_version": 3,
  "name": "YT Music Focus Mode",
  "version": "2.0",
  "description": "Show ONLY specific sections and hide Explore.",
  "permissions": ["storage"],
  "host_permissions": ["https://music.youtube.com/*"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://music.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}
{
  "manifest_version": 3,
  "name": "YT Music Section Hider",
  "version": "1.0",
  "description": "Hide specific sections on YouTube Music home feed.",
  "permissions": ["storage"],
  "host_permissions": ["https://music.youtube.com/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png", 
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://music.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}